<div class="s-blogs">
    <div class="l-wrapper">
        <div class="u-text-center">
            <h2 class="c-heading --xxxl u-mb+">Trainingen</h2>
        </div>
        <div class="s-blogs__grid u-mb">

            {% for course in courses %}
            <a href="" class="c-blog-card">
                <div class="c-blog-card__image">
                    <img src="{{ course.image.url }}">
                </div>
                <div class="c-blog-card__date">Lorem ipsum</div>
                <div class="c-blog-card__title">{{ course }}</div>
            </a>
            {% endfor %}
        </div>
        <div class="u-text-center">
            <a href="{{ 'url' }}" class="c-link --light-blue --with-arrow">Toon alle trainingen</a>
        </div>
    </div>
</div>
