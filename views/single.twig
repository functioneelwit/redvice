{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<div class="back-button-wrapper">
			<a href="/" class="button back-button">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/></svg>
				home
			</a>
				<a href="/timetable" class="button back-button right">
					timetable
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/></svg>
				</a>
			</div>
			<img src="{{ site.theme.link }}/images/bands/{{ post.title }}_1024.jpg">
			<section class="article-content">
				<div class="article-h1-wrapper">
					<h1 class="article-h1">
						{{ post.title }}
					</h1>
				</div>
				{% if post.tartarus %}
					<h2 class="tartarus">Curated by Tartarus</h2>
				{%  endif %}
				{% if post.ratrace %}
					<h2 class="tartarus">Curated by Ratrace</h2>
				{%  endif %}

				<h2 class="tartarus">{{ post.start_time }} / {{ post.venue.post_title }}</h2>

				<div class="article-body">
					{{ post.meta('content') }}
				</div>

				<div class="act-links">
					{% if post.spotify_url %}
						<a href="{{ post.spotify_url }}">Beluister {{ post.title }} op Spotify</a><br>
					{%  endif %}
					{% if post.bandcamp_url or  instagram_url or facebook_url %}
						{% if post.bandcamp_url %}
							<a href="{{ post.bandcamp_url }}" class="social_link">Bandcamp</a>
							{% if post.instagram_url or post.facebook_url %} | {%  endif %}
						{%  endif %}
						{% if post.instagram_url %}
							<a href="{{ post.instagram_url }}" class="social_link">Instagram</a>
							{% if post.facebook_url %} | {%  endif %}
						{%  endif %}
						{% if post.facebook_url %}
							<a href="{{ post.facebook_url }}" class="social_link">Facebook</a>
						{% endif %}
						<br>
					{%  endif %}
					{% if post.website %}
						<a href="{{ post.website }}">Website {{ post.title }}</a><br>
					{%  endif %}
					<br>
					<a href="{{ options.facebook_event_url }}">WSF Facebook event</a>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
