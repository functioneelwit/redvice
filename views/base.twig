	{% block head %}
	{% endblock %}
	</head>

	<body class="{{body_class}} color-{{ color }}" data-template="base.twig">
	<div class="bg"></div>
		{{ function('wp_body_open') }}

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper">
				{% block content %}
