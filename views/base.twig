				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% include 'footer.twig' %}

		{% block footer %}
			{{ function('wp_footer') }}
		{% endblock %}
	</body>

</html>
